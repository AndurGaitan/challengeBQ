<h2>Products List</h2>
<a href="/form-products">create products</a>
<div class="row">
<form id="form">
  limit: <input type="number" id="query-limit"><br>
  page: <input type="number" id="query-page"><br>
  <button type="submit">ok</button>
</form>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>stock</th>
      <th>Price</th>
      <th>Options</th>
    </tr>

  </thead>
  <tbody>
    {{#each docs}}
    <tr>
    <td>{{this.title}}</td>
    <td>{{this.description}}</td>
    <td>{{this.stock}}</td>
    <td>{{this.price}}</td>
    <td><button>actualizar</button><button>ver</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
<script>
  document.getElementById('form').onsubmit = (e) =>{
    e.preventDefault()
    const limit = document.getElementById('limit').value
    const page = document.getElementById('page').value
    const url = `/list?limit=${limit}&page${page}`
    window.location.href = url
  } 
</script>
</div>
